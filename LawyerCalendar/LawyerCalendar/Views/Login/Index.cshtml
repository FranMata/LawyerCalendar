@model LawyerCalendar.Models.ViewModels.UserViewModel;

<div class="justify-content-center">
    <h1>Inicio de sesion</h1>

    <form asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="IdDocument" class="control-label"></label>
            <input asp-for="IdDocument" class="form-control" />
            <span asp-validation-for="IdDocument" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BirthDate" class="control-label"></label>
            <input asp-for="BirthDate" class="form-control" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>

        <a href="/CreateUser">Registrar nuevo usuario</a>

        <div class="form-group">
            <input type="submit" value="Iniciar sesion" class="btn bg-primary" />
        </div>
    </form>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}