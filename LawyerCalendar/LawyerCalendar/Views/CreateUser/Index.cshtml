@model LawyerCalendar.Models.ViewModels.UserViewModel;

<h1>Crear Usuario</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IdDocument" class="control-label"></label>
                <input asp-for="IdDocument" class="form-control" />
                <span asp-validation-for="IdDocument" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PaymentMethodId" class="control-label"></label>
                <select asp-for="PaymentMethodId" asp-items="ViewBag.PaymentMethods" class="form-control"></select>
                <span asp-validation-for="PaymentMethodId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PaymentMethodData" class="control-label"></label>
                <input asp-for="PaymentMethodData" class="form-control" />
                <span asp-validation-for="PaymentMethodData" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn bg-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}